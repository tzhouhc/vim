{
  // global
  "coc.preferences.formatOnSaveFiletypes": [],
  "coc.preferences.colorSupport": true,
  "coc.preferences.hoverTarget": "float",
  "coc.preferences.jumpCommand": "edit",

  // completion
  "suggest.autoTrigger": "always",
  "suggest.triggerAfterInsertEnter": false,
  "suggest.minTriggerInputLength": 2,
  "suggest.noselect": false,
  "suggest.enablePreview": true,
  "suggest.enablePreselect": true,
  "suggest.numberSelect": false,
  "suggest.floatEnable": true,
  "suggest.localityBonus": true,
  "suggest.acceptSuggestionOnCommitCharacter": true,

  // linting
  "diagnostic.checkCurrentLine": true,
  "diagnostic.virtualText": false,
  "diagnostic.virtualTextPrefix": " ⬩ ",
  "diagnostic.enableSign": true,
  "diagnostic.refreshOnInsertMode": true,
  "diagnostic.errorSign": "x",
  "diagnostic.warningSign": "!",
  "diagnostic.infoSign": "?",
  "diagnostic.hintSign": "·",
  "diagnostic.level": "information",

  // custom servers
  "languageserver": {
    "ciderlsp": {
      "command": "/google/bin/releases/editor-devtools/ciderlsp",
      "args": [
        "--tooltag=coc-nvim",
        "--noforward_sync_responses"
      ],
      "filetypes": [
        "c",
        "cpp",
        "proto",
        "textproto",
        "go"
      ]
    },
    "kythe": {
      "command": "/google/bin/releases/grok/tools/kythe_languageserver",
      "args": [
        "--google3"
      ],
      "filetypes": [
        "python",
        "go",
        "java",
        "cpp",
        "proto"
      ]
    }
  }
}
